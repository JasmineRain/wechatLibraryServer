<%- include header %>
<div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">
        <h3>类别信息</h3>
    </div>
</div>
<div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">
        <form class="ui form segment" method="post" enctype="multipart/form-data">
            <div class="field required">
                <label>类别</label>
                <input placeholder="类别" type="text" name="sortName" value="<%= sort.sortName%>">
            </div>
            <div class="field required">
                <label>类别英文缩写</label>
                <input placeholder="类别英文缩写" type="text" name="sortEname" value="<%= sort.sortEname%>">
            </div>
            <div class="field required">
                <label>封面</label>
                <img src="/img/<%= sort.sortCover %>" width="100px"/>
                <input type="file" name="sortCover">
            </div>
            <input type="submit" class="ui button fluid" value="修改">
        </form>
    </div>
</div>

<%- include footer %>
